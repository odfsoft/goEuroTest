package com.goeuro.test;

import org.springframework.context.ApplicationContext;
import org.springframework.context.support.ClassPathXmlApplicationContext;
import org.springframework.web.client.RestTemplate;

import com.goeuro.test.domain.Position;

public class main {	
	
	@SuppressWarnings("unused")
	 public static void main(String[] args) {
		ApplicationContext context = new ClassPathXmlApplicationContext("spring-context.xml");
		RestTemplate restTemplate = new RestTemplate();
    	Position position = restTemplate.getForObject("http://api.goeuro.com/api/v2/position/suggest/en/hola", Position[].class);
		System.out.println("_type: " + position.getPositionType());
		System.out.println("id: " + position.getId());
		System.out.println("Name: " + position.getName());
		System.out.println("Type: " + position.getType());
		System.out.println("Class: " + position.getClass());
		System.out.println("Latitude: " + position.getGeoPosition().getLatitude());
		System.out.println("Longitude:  " + position.getGeoPosition().getLongitude());
		
	 }
}
