package com.goeuro.test.service.impl;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.beans.factory.annotation.Value;
import org.springframework.stereotype.Component;
import org.springframework.web.client.RestTemplate;

import com.goeuro.test.domain.Position;
import com.goeuro.test.service.PositionService;

@Component
public class PositionServiceImpl implements PositionService{

	@Autowired
	RestTemplate restTemplate;
	
	@Value("${com.goeuro.api.url}")
	private String apiUrl;
	
	@Override
	public void exportPositionSearch(String criteria) {
		Position position = restTemplate.getForObject(buildSearchUrl(criteria), Position.class);
//		System.out.println("_type: " + position.get_type());
		System.out.println("id: " + position.getId());
		System.out.println("Name: " + position.getName());
		System.out.println("Type: " + position.getType());
		System.out.println("Class: " + position.getClass());
		System.out.println("Latitude: " + position.getGeoPosition().getLatitude());
		System.out.println("Longitude:  " + position.getGeoPosition().getLongitude());
		
	}

	private String buildSearchUrl(String criteria) {
		return apiUrl+criteria;
	}

}
